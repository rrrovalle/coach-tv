<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/idPopularImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/popular1" />

    <TextView
        android:id="@+id/idPopularName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Tai Culinary"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/idPopularImg"
        app:layout_constraintStart_toStartOf="@+id/idPopularImg"
        app:layout_constraintTop_toBottomOf="@+id/idPopularImg" />
</androidx.constraintlayout.widget.ConstraintLayout>
