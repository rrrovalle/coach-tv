<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idMentoringCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="129dp">

        <!--ImageVIew to display our Course Image-->

        <ImageView
            android:id="@+id/cardViewMentoringImg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/mentoringTitle"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/fin" />

        <TextView
            android:id="@+id/mentoringTitle"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cardViewImg"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="-3dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="81dp"
            android:layout_marginRight="81dp"
            android:layout_marginBottom="2dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Mentoring Title"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mentoringTitle2"
            android:layout_width="65dp"
            android:layout_height="29dp"
            android:layout_above="@+id/cardViewImg"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="316dp"
            android:layout_marginLeft="316dp"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="-6dp"
            android:layout_marginRight="-6dp"
            android:layout_marginBottom="2dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="..."
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
